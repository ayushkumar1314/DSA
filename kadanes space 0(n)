#include <bits/stdc++.h>
using namespace std;
int maxsubsum(int arr[],int n){
    int x[100];//x[i] contains maximum sum of subarray ending at index i
    x[0]=arr[0];
    for(int i=1;i<n;i++){
        x[i]=max(arr[i],arr[i]+x[i-1]);
    }
    int largest=INT_MIN;
    for(int i=0;i<n;i++){
        largest=max(largest,x[i]);
    }
    return largest;
}
int main() {
	// your code goes here
	int n;
	cin>>n;
	int arr[100];
	for(int i=0;i<n;i++)
	cin>>arr[i];
	cout<<maxsubsum(arr,n);

}
